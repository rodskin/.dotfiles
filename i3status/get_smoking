#!/bin/sh

FROM_DATE="2021-07-12"
CIGARETTE_PRICE=10
SMOKED_CIGARETTES_PER_DAY=10
CIGARETTES_IN_PACK=20
OFFSET=-30

NB_DAYS=$((($(date +%s)-$(date +%s --date $FROM_DATE))/(3600*24)))

SAVED_MONEY_A_DAY=$(echo "scale=2; $OFFSET+$NB_DAYS*$CIGARETTE_PRICE*($SMOKED_CIGARETTES_PER_DAY/$CIGARETTES_IN_PACK)" | bc)

echo "$SAVED_MONEY_A_DAYâ‚¬"

