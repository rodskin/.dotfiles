#!/bin/sh

FROM_DATE="2021-09-20"
CIGARETTE_PRICE=10
SMOKED_CIGARETTES_PER_DAY=10
CIGARETTES_IN_PACK=20
OFFSET=0

NB_DAYS=$((($(date +%s)-$(date +%s --date $FROM_DATE))/(3600*24)))

if [ "$NB_DAYS" -lt 1 ]; then
    echo "0€"
else
    SAVED_MONEY=$(echo "scale=2; $OFFSET+$NB_DAYS*$CIGARETTE_PRICE*($SMOKED_CIGARETTES_PER_DAY/$CIGARETTES_IN_PACK)" | bc)
    echo "${NB_DAYS}j - $SAVED_MONEY€"
fi
